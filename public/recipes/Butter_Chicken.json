{
    "title": "Butter Chicken",
    "meta": "",
    "ingredients": [
        { "text": "2 lbs chicken breasts", "type": "meat" },
        { "text": "1 yellow onion - finely chopped", "type": "produce" },
        { "text": "&frac12; tsp ginger - finely chopped", "type": "produce" },
        { "text": "1 garlic clove - finely chopped", "type": "produce" },
        { "text": "2 Jalapeños - finely chopped", "type": "produce" },
        { "text": "&frac34; cup tomato puree", "type": "imperishable" },
        { "text": "2 TB cilantro - finely chopped", "type": "produce" },
        { "text": "1 TB ghee", "type": "imperishable" },
        { "text": "1 stick butter", "type": "perishable" },
        { "text": "1 cup of coconut oil", "type": "imperishable" },
        { "text": "2 tsp curry powder", "type": "spice" },
        { "text": "2 tsp garam masala", "type": "spice" },
        { "text": "1 tsp cumin", "type": "spice" },
        { "text": "&frac12; tsp chili powder", "type": "spice" }

    ],
    "directions": [
        { "text": "Bake chicken at 350° for 1 hour." },
        { "text": "Melt ghee in a Dutch oven and sautee onion over medium-high heat until golden brown." },
        { "text": "Add ginger, garlic, and jalapeño and cook for 1 min." },
        { "text": "Add puree and spices and cook for 3 mins." },
        { "text": "Reduce heat to low and add butter and stir till melted." },
        { "text": "Remove pot from heat and mix in oil and cover." },
        { "text": "After letting chicken cool, cut into bite sized pieces throw into sauce." },
        { "text": "Cook covered at 350° for 15 mins, remove lid and bake for an additional 7 mins." },
        { "text": "Sprinkle with cilantro." }
    ]
}
