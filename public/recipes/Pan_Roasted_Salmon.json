    "ingredients": [
        { "text": "2 Salmon fillets with skin", "type": "meat" },
        { "text": "2 TBSP vegetable oil", "type": "imperishable" },
        { "text": "salt", "type": "spice" },
        { "text": "pepper", "type": "spice" }
    ],
    "directions": [
        {
            "text": "Dry fillets with a paper towel and season both sides with salt and pepper."
        },
        {
            "text": "Heat oil on medium heat in a pan until shimmering."
        },
        {
            "text": "Add fish skin side down and reduce heat to medium-low."
        },
        {
            "text": "Press on backs of fillets for 1 min."
        },
        {
            "text": "Cook for 5 mins."
        },
        {
            "text": "Flip fish and cook until 125Â°."
        },
        {
            "text": "Let rest for 5 mins."
        }
    ]
}
