{
    "title": "Pork Chops",
    "meta": "",
    "ingredients":  [
        { "text": "2 1\" thick 8oz bone-in pork chops", "type": "meat" },
        { "text": "1 TBSP thyme (minced)", "type": "produce" },
        { "text": "1 TBSP vegetable oil", "type": "imperishable" },
        { "text": "1 TBSP butter", "type": "imperishable" },
        { "text": "salt", "type": "spice" },
        { "text": "black pepper", "type": "spice" }
    ],
    "directions": [
        { "text": "Pat chops dry and season with salt and pepper." },
        { "text": "Heat oil in a cast-iron pan over high heat." },
        { "text": "Cook chops flipping every minute for about 5 mins." },
        { "text": "Add butter and thyme and cook until chops reach 135&deg;." },
        { "text": "Allow to rest for 5 mins." }
    ]
}
