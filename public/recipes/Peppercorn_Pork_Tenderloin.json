{
    "title": "Peppercorn Pork Tenderloin",
    "meta": "",
    "ingredients": [
        "2 2 lb pork tenderloins",
        "Applewood chips",
        "2 TBSP olive oil",
        "2 tsp turbinado sugar",
        "1 TBSP peppercorns processed",
        "1 tsp red pepper flakes"
    ],
    "directions": [
        { "text": "Heat smoker to 225°." },
        { "text": "Coat tenderloins with olive oil." },
        { "text": "Mix sugar and spices together and rub on tenderloins." },
        { "text": "Cook tenderloins for about 2 hours until meat is 145°." },
        { "text": "Add applewood chips every 30 mins up to an hour." },
        { "text": "Let tenderloins rest for 10 mins." }
    ]
}
