{
    "title": "Pumpkin Brittle",
    "meta": "",
    "ingredients": [
        { "text": "1 cup pepitas", "type": "imperishable" },
        { "text": "1 cup sugar", "type": "imperishable" },
        { "text": "&frac12; cup brown sugar", "type": "imperishable" },
        { "text": "1 cup water", "type": "imperishable" },
        { "text": "&frac13; cup light corn syrup", "type": "imperishable" },
        { "text": "2 TBSP butter", "type": "imperishable" },
        { "text": "&frac12; tsp baking soda", "type": "imperishable" },
        { "text": "1 tsp vanilla extract", "type": "imperishable" }
    ],
    "directions": [
        { "text": "Grease a large baking dish." },
        { "text": "Bring water, corn syrup, both sugars to a 260° boil in a pot while stirring." },
        { "text": "Remove pot from heat and stir in butter and pepitas." },
        { "text": "Return pot to heat and cook till 295° while stirring." },
        { "text": "Remove from heat and stir in the baking soda and vanilla." },
        { "text": "Immediately pour mixture into the baking dish, spread and let cool." }
    ]
}
