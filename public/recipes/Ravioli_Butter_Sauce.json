{
    "title": "Ravioli Butter Sauce",
    "meta": "",
    "ingredients": [
        { "text": "2 garlic cloves diced", "type": "produce" },
        { "text": "5 sage leaves diced", "type": "produce" },
        { "text": "4 TBSP butter", "type": "imperishable" },
        { "text": "parmesan cheese", "type": "imperishable" },
        { "text": "salt", "type": "spice" },
        { "text": "pepper", "type": "spice" }
    ],
    "directions": [
        { "text": "Melt butter in a small saucepan." },
        { "text": "Over medium heat add garlic, sage, dash of salt and dash of pepper." },
        { "text": "Saute for 2 mins." },
        { "text": "After applying sauce sprinkle cheese on top." }
    ]
}
