{
    "title": "Peanut Butter Fudge",
    "meta": "Aunt Pat via Grandma Shane Version",
    "ingredients": [
        { "text": "&frac34; cup peanut butter", "type": "imperishable" },
        { "text": "&frac12; cup butter", "type": "imperishable" },
        { "text": "&frac12; cup white corn syrup", "type": "imperishable" },
        { "text": "1 tsp vanilla extract", "type": "imperishable" },
        { "text": "&frac12; tsp salt", "type": "spice" },
        { "text": "4 cups powdered sugar", "type": "imperishable" }
    ],
    "directions": [
        { "text": "Combine all ingredients and mix until even consistency." },
        { "text": "Put in a 8x8 inch pan lined with parchment paper." },
        { "text": "Refrigerate for at least 2 hours." },
        { "text": "Cut into 1 inch pieces." }
    ]
}
