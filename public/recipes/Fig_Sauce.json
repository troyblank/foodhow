{
    "title": "Fig Sauce",
    "meta": "Great on pork chops",
    "ingredients": [
        { "text": "2 cups dried figs", "type": "imperishable" },
        { "text": "4 cups shiraz red wine", "type": "imperishable" },
        { "text": "4 TBSP red wine vinegar", "type": "imperishable" },
        { "text": "&frac12; cup sugar", "type": "imperishable" }
    ],
    "directions": [
        { "text": "Cut figs in half long way." },
        { "text": "Whisk wine, sugar and 2 TBSP of vinegar in a bowl." },
        { "text": "Cook mixture with figs in medium high skillet for 10 mins." },
        { "text": "Add rest of vinegar and cool for 3 mins." }
    ]
}