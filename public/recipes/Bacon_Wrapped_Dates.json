    "ingredients": [
        { "text": "12 strips bacon (cut in half)", "type": "meat" },
        { "text": "24 Medjool dates (pitted)", "type": "produce" },
        { "text": "&frac13; cup porter beer", "type": "imperishable" },
        { "text": "&frac12; cup maple syrup", "type": "imperishable" },
        { "text": "2oz goat cheese", "type": "perishable" }
    ],
    "directions": [
        { "text": "Boil porter and syrup for 8 mins until thickened." },
        { "text": "Fill the center of each date with goat cheese." },
        { "text": "Wrap each date in bacon." },
        { "text": "Brush the top side of the dates with half the syrup."},
        { "text": "Bake at 400Â° for 8 mins." },
        { "text": "Flip the dates over and brush the rest of the syrup over the dates."},
        { "text": "Bake again for 8 mins." }
    ]
}
