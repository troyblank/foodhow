{
    "title": "Ravioli Meatloaf Filling",
    "meta": "",
    "ingredients": [
        "&frac12; white onion",
        "1 garlic clove",
        "1 red bell pepper",
        "1 carrot",
        "6 ounces ground sirloin",
        "6 ounces ground chuck",
        "1 egg",
        "3 ounce garlic flavored croutons",
        "&frac12; tsp chili powder",
        "&frac12; tsp thyme",
        "&frac14; tsp cayenne pepper",
        "&frac14; tsp black pepper",
        "&frac34; tsp kosher salt"
    ],
    "directions": [
        { "text": "Process croutons and spices together." },
        { "text": "Process all vegetables to small bits, do not puree." },
        { "text": "Add all ingredients to bowl and work in without squeezing." }
    ]
}
