{
    "title": "Mojo Pork",
    "meta": "Overnight marination & 10 hour smoke",
    "ingredients": {
        "Sauce": [
            { "text": "2 TBSP garlic (minced)", "type": "produce" },
            { "text": "&frac12; cup orange juice", "type": "imperishable" },
            { "text": "&frac14; cup lime juice", "type": "produce" },
            { "text": "2 TBSP olive oil", "type": "imperishable" },
            { "text": "1 &frac12; tsp salt", "type": "spice" },
            { "text": "1 &frac12; tsp adobo seasoning", "type": "spice" }
        ],
        "Rub": [
            { "text": "&frac14; orange (zested)", "type": "produce" },
            { "text": "2 TBSP cuban seasoning", "type": "spice" },
            { "text": "1 &frac12; tsp onion powder", "type": "spice" },
            { "text": "1 &frac12; tsp garlic powder", "type": "spice" }
        ],
        "Meat": [
            { "text": "Apple Wood Chips", "type": "uncommon" },
            { "text": "&frac14; orange (zested)", "type": "produce" },
            { "text": "1 avocado (sliced)", "type": "produce" },
            { "text": "1 red onion (sliced)", "type": "produce" },
            { "text": "4 lb pork shoulder", "type": "meat" },
            { "text": "2 TBSP honey", "type": "imperishable" }
        ]
    },
    "directions": [
        { "text": "Mix all sauce ingredients in a bowl." },
        { "text": "In another bowl mix all rub ingredients." },
        { "text": "Rub the rub on the pork." },
        { "text": "Inject the sauce into the pork and refrigerate overnight." },
        { "text": "Smoke meat at 225° with wood chips until meat reaches 200°." },
        { "text": "Drizzle the meat with honey and orange zest." },
        { "text": "Wrap meat in foil and put in a cooler for 40 mins." },
        { "text": "Serve meat with sauted onions and avocado." }
    ]
}
