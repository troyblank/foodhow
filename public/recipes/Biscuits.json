    "ingredients": {
        "Base": [
            { "text": "1 &frac14; cups heavy cream", "type": "perishable" },
            { "text": "2 cups flour", "type": "imperishable" },
            { "text": "1 TBSP baking powder", "type": "imperishable" },
            { "text": "&frac34; tsp salt", "type": "spice" },
            { "text": "4 TBSP butter (melted)", "type": "perishable" },
            { "text": "2 TBSP butter (melted)", "type": "perishable" }
        ],
        "Cheddar Filling (optional)": [
            { "text": "4 oz. cheddar cheese (grated)", "type": "perishable" },
            { "text": "&frac14 cup scallions (sliced)", "type": "produce" }
        ],
        "Parmesan Filling (optional)": [
            { "text": "2 oz. parmesan (grated)", "type": "perishable" },
            { "text": "1 cup bacon (cooked and crumbled)", "type": "meat" }
        ]
    },
    "directions": [
        { "text": "Whisk the flour, baking powder, and salt in a large bowl." },
