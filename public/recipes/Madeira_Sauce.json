{
    "title": "Madeira Sauce",
    "meta": "Works well poured over pork",
    "ingredients": [
        { "text": "&frac34; cup Madeira", "type": "imperishable" },
        { "text": "8 oz white mushrooms (quartered)", "type": "produce" },
        { "text": "1 shallot (minced)", "type": "produce" },
        { "text": "1 garlic clove (minced)", "type": "produce" },
        { "text": "1 TBSP sage (minced)", "type": "produce" },
        { "text": "1 TBSP vegetable oil", "type": "imperishable" },
        { "text": "3 TBSP butter", "type": "imperishable" },
        { "text": "&frac18; tsp red pepper flakes", "type": "spice" },
        { "text": "1 tsp salt", "type": "spice" },
        { "text": "1 tsp black pepper", "type": "spice" }
    ],
    "directions": [
        { "text": "Heat oil in a large skillet over medium-high heat." },
        { "text": "Saute mushrooms and shallot for about 5 mins." },
        { "text": "Add garlic and red pepper and saute for 30 seconds." },
        { "text": "Off heat add Madeira and if you are also cooking meat add any left over meat juice." },
        { "text": "Return to heat and cook for 5 mins." },
        { "text": "Off heat whisk in butter, sage, salt and pepper." }
    ]
}
