{
    "title": "Breakfast Sausage",
    "meta": "",
    "ingredients": [
        { "text": "2 lbs pork butt", "type": "meat" },
        { "text": "&frac12 pound fat back", "type": "meat" },
        { "text": "1 TBSP light brown sugar", "type": "imperishable" },
        { "text": "1 &frac12; tsp ground sage leaves", "type": "produce" },
        { "text": "2 tsp ground thyme leaves", "type": "produce" },
        { "text": "&frac12; tsp nutmeg", "type": "spice" },
        { "text": "&frac12; cayenne pepper", "type": "spice" },
        { "text": "&frac12; red pepper flakes", "type": "spice" },
        { "text": "2 tsp salt", "type": "spice" }
    ],
    "directions": [
        { "text": "Dice pork and fat into small pieces." },
        { "text": "Combine all ingredients and let chill for 1 hour." },
        { "text": "Grind with a fine blade and form into 1 inch patties." },
        { "text": "Cook patties for 7.5 mins each side on medium low heat." }
    ]
}
