{
    "title": "Italian Turkey Sub",
    "meta": "",
    "ingredients": [
        { "text": "1 &frac12; lb sliced turkey", "type": "meat" },
        { "text": "6 garlic cloves", "type": "produce" },
        { "text": "1 cup mushrooms", "type": "produce" },
        { "text": "6 6′ sub rolls", "type": "perishable" },
        { "text": "12 oz mozzarella", "type": "perishable" },
        { "text": "1 cup basil pesto", "type": "imperishable" },
        { "text": "3 TBSP olive oil", "type": "imperishable" },
        { "text": "2 14.5 oz cans of diced tomatoes (drained)", "type": "imperishable" },
        { "text": "&frac18; tsp red pepper flakes", "type": "spice" },
        { "text": "1 tsp salt", "type": "spice" },
        { "text": "1 tsp pepper", "type": "spice" }
    ],
    "directions": [
        { "text": "Heat oven to 500°." },
        { "text": "Roll thin slices of mozzarella out between towels to dry out." },
        { "text": "Heat oil in a large skillet over medium high heat." },
        { "text": "Saute garlic and pepper flakes for 1 min." },
        { "text": "Add tomatoes and mushrooms and cook for 12 mins." },
        { "text": "Off heat stir in 2 TBSP of pesto and the salt and pepper." },
        { "text": "Spread pesto on the inside of each roll." },
        { "text": "Then pack all ingredients into the sandwiches." },
        { "text": "cook on a greased sheet in the oven for 5 mins." }
    ]
}
