{
    "title": "Fruitcake",
    "meta": "",
    "ingredients": [
        { "text": "1 lemon", "type": "produce" },
        { "text": "1 orange", "type": "produce" },
        { "text": "1 cup golden raisins", "type": "imperishable" },
        { "text": "1 cup currants", "type": "imperishable" },
        { "text": "&frac12; cup sun dried cranberries", "type": "imperishable" },
        { "text": "&frac12; cup sun dried blueberries", "type": "imperishable" },
        { "text": "&frac12; cup dried cherries", "type": "imperishable" },
        { "text": "&frac12; cup dried apricots", "type": "imperishable" },
        { "text": "&frac14; cup candied ginger", "type": "imperishable" },
        { "text": "&frac12; cup pecans", "type": "imperishable" },
        { "text": "5 oz butter", "type": "imperishable" },
        { "text": "2 eggs", "type": "perishable" },
        { "text": "1 cup unfiltered apple juice", "type": "imperishable" },
        { "text": "1 &frac34; cups flour", "type": "imperishable" },
        { "text": "1 tsp baking soda", "type": "imperishable" },
        { "text": "1 tsp baking powder", "type": "imperishable" },
        { "text": "1 cup sugar", "type": "imperishable" },
        { "text": "4 whole cloves", "type": "spice" },
        { "text": "6 allspice berries", "type": "spice" },
        { "text": "1 tsp cinnamon", "type": "spice" },
        { "text": "1 tsp ground ginger", "type": "spice" },
        { "text": "1 &frac12; tsp salt", "type": "spice" },
        { "text": "1 cup gold rum", "type": "imperishable" },
        { "text": "some brandy", "type": "imperishable" }
    ],
    "directions": [
        { "text": "Get zest from lemon and orange. Chop up apricots and candied ginger." },
        { "text": "Combine all dried fruits, candied ginger, and zests. Add rum and let sit overnight in room temperature." },
        { "text": "Process cloves and allspice." },
        { "text": "Place fruit mixture in a large pot, and add sugar, butter, apple juice, and spices." },
        { "text": "Bring to a boil while stirring, then reduce to a simmer for 10 mins." },
        { "text": "Bring pot to room temperature, then heat oven to 325Â°" },
        { "text": "Sift in all dry ingredients while stirring, then add to a 10\" loaf pan." },
        { "text": "Bake for 1 hour and 15 mins. Check for doneness with a toothpick." },
        { "text": "Spritz top of cake with brandy." },
        { "text": "Wait for cake to completely cool before removing from pan, about an hour." },
        { "text": "Cake can be stored for a long time, spritz with brandy every 3 days if becoming dry." }
    ]
}
